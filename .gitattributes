###############################################################################
# Unity Specific Settings (Явные правила для Unity)
###############################################################################

# ================ #
# Текстовые файлы (LF)  
# ================ #
*.cs          text eol=lf
*.shader      text eol=lf
*.unity       text eol=lf diff=unity merge=unityyamlmerge
*.prefab      text eol=lf diff=unity merge=unityyamlmerge
*.asset       text eol=lf diff=unity merge=unityyamlmerge
*.controller  text eol=lf
*.anim        text eol=lf
*.json        text eol=lf
*.txt         text eol=lf
*.cginc       text eol=lf
*.hlsl        text eol=lf
*.glslinc     text eol=lf

# ================ #
# Бинарные файлы  
# ================ #
*.png         binary
*.jpg         binary
*.jpeg        binary
*.gif         binary
*.fbx         binary
*.obj         binary
*.tga         binary
*.mat         binary
*.wav         binary
*.mp3         binary
*.ogg         binary
*.ttf         binary
*.otf         binary
*.dll         binary
*.exe         binary
*.so          binary
*.a           binary
*.bundle      binary
*.unitypackage binary
*.zip         binary
*.rar         binary

###############################################################################
# Общие настройки (оставшиеся оригинальные правила)
###############################################################################
# Автодетект для остальных текстовых файлов
* text=auto

# ================ #
# Закомментированные настройки (для справки)
# ================ #
